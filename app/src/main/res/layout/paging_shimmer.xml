<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:shimmer_auto_start="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="1">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewsh"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:cardCornerRadius="10dip"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivsh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/shimmer_placeholder" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvsh"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/shimmer_placeholder"
                android:textSize="16sp"
                android:textColor="#191f5d"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/cardViewsh"
                app:layout_constraintStart_toStartOf="@+id/cardViewsh"
                app:layout_constraintTop_toBottomOf="@+id/cardViewsh" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="1">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewsh2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:cardCornerRadius="10dip"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivsh2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/shimmer_placeholder" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvsh2"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/shimmer_placeholder"
                android:textSize="16sp"
                android:textColor="#191f5d"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/cardViewsh2"
                app:layout_constraintStart_toStartOf="@+id/cardViewsh2"
                app:layout_constraintTop_toBottomOf="@+id/cardViewsh2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</com.facebook.shimmer.ShimmerFrameLayout>